// See https://aka.ms/new-console-template for more information
using System;


namespace Calculator
{


    class Program
    {
        static void Main(string[] args)
        {
            while (true)
            {
                Console.WriteLine("Jaką operację chcesz wybrać:");

                Console.WriteLine("1. Suma");
                Console.WriteLine("2. Różnica");
                Console.WriteLine("3. Iloczyn");
                Console.WriteLine("4. Iloraz");
                Console.WriteLine("5. Potęga");
                Console.WriteLine("6. Pierwiastek");
                Console.WriteLine("7. Sinus");
                Console.WriteLine("8. Cosinus");
                Console.WriteLine("9. Tangens");
                Console.WriteLine("0. Wyjście");

                int operacja = Convert.ToInt32(Console.ReadLine());

                if (operacja == 0)
                    break;

                double a, b;
                double operacja = 0;

                if (operacja != 6 && operacja != 7 && operacja != 8 && operacja != 9)
                {
                    Console.Write("Podaj 1 liczbę: ");
                    a = Convert.ToDouble(Console.ReadLine());
                    Console.Write("Podaj 2 liczbę: ");
                    b = Convert.ToDouble(Console.ReadLine());
                }
                else
                {
                    Console.Write("Podaj liczbę: ");
                    a = Convert.ToDouble(Console.ReadLine());
                }

                switch (operacja)
                {
                    case 1:
                        wynik = a + b;
                        break;
                    case 2:
                        wynik = a - b;
                        break;
                    case 3:
                        wynik = a * b;
                        break;
                    case 4:
                        if (b != 0)
                            wynik = a / b;
                        else
                            Console.WriteLine("Nie można podzielić przez  zero.");
                        break;
                    case 5:
                        wynik = Math.Pow(a, b);
                        break;
                    case 6:
                        wynik = Math.Sqrt(a);
                        break;
                    case 7:
                        wynik = Math.Sin(a);
                        break;
                    case 8:
                        wynik = Math.Cos(a);
                        break;
                    case 9:
                        wynik = Math.Tan(a);
                        break;
                    default:
                        Console.WriteLine("Zły wybór.");
                        break;
                }

                Console.WriteLine("Wynik: " + wynik);
            }
        }
    }

}
